{
  "name": "sidekick",
  "version": "0.1.0",
  "description": "Neovim integration for Claude Code - prevents file modifications when files have unsaved changes in Neovim.\n`cargo install --git https://github.com/NishantJoshi00/sidekick` to install the CLI utility.",
  "author": {
    "name": "Nishant Joshi"
  },
  "homepage": "https://github.com/NishantJoshi00/sidekick",
  "repository": "https://github.com/NishantJoshi00/sidekick",
  "keywords": ["neovim", "editor", "integration", "hooks"],
  "license": "MIT",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "sidekick hook"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "sidekick hook"
          }
        ]
      }
    ]
  }
}
